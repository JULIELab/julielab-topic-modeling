<?xml version="1.0" encoding="UTF-8" ?>
<tmconfig>
	<train>
		<parameters>
			<parameter>
				<numTopics>100</numTopics>
			</parameter>
			<parameter>
				<alphaSum>1.0</alphaSum>
			</parameter>
			<parameter>
				<beta>0.1</beta>
			</parameter>
			<parameter>
				<numThreads>1</numThreads>
			</parameter>
			<parameter>
				<numIterations>1000</numIterations>
			</parameter>
			<parameter>
				<optimizationInterval>0</optimizationInterval>
			</parameter>
		</parameters>
		<corpus>
			<subset>
				<table>testmodeling</table>
				<reset>false</reset>
				<annotationpgschema>_data_xmi</annotationpgschema>
			</subset>
			<costosys>
				<configurationFile>costosys.xml</configurationFile>
			</costosys>
		</corpus>
	</train>
	<search>
		<parameters>
			<parameter>
				<probabilityThreshold>0.001</probabilityThreshold>
			</parameter>
		</parameters>
	</search>
	<infer>
		<parameters>
			<parameter>
				<numIterations>500</numIterations>
			</parameter>
			<parameter>
				<savingInterval>10</savingInterval>
			</parameter>
			<parameter>
				<firstSavingInterval>50</firstSavingInterval>
			</parameter>
			<parameter>
				<topicWordsDisplayed>10</topicWordsDisplayed>
			</parameter>
		</parameters>
	</infer>
</tmconfig>